<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#ffffff" >
    
    <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:padding="10dp" 
       android:orientation="horizontal"
        >
        <TextView 
            android:id="@+id/goe"
            android:text="Οικονομικής Επιστήμης "
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
         	android:textStyle="bold"
         	android:textSize="18sp"
         	android:typeface="monospace"
         	android:paddingLeft="10dp"
            />
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/velsma"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:padding="10dp" 
        >
        <TextView 
            android:id="@+id/goe"
            android:text="Διεθνών και Ευρωπαϊκών "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
         	android:textStyle="bold"
         	android:textSize="18sp"
         	android:typeface="monospace"
         	android:paddingLeft="10dp"
            />
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/velsma"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:padding="10dp" 
        >
        <TextView 
            android:id="@+id/goe"
            android:text="Οργάνωσης και Διοίκησης"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
         	android:textStyle="bold"
         	android:textSize="18sp"
         	android:typeface="monospace"
         	android:paddingLeft="10dp"
            />
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/velsma"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:padding="10dp" 
        >
        <TextView 
            android:id="@+id/goe"
            android:text="Μάρκετινγκ "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
         	android:textStyle="bold"
         	android:textSize="18sp"
         	android:typeface="monospace"
         	android:paddingLeft="10dp"
            />
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/velsma"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:padding="10dp" 
        >
        <TextView 
            android:id="@+id/goe"
            android:text="Λογιστικής "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
         	android:textStyle="bold"
         	android:textSize="18sp"
         	android:typeface="monospace"
         	android:paddingLeft="10dp"
            />
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/velsma"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:padding="10dp" 
        >
        <TextView 
            android:id="@+id/goe"
            android:text="Διοικητικής Επιστήμης "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
         	android:textStyle="bold"
         	android:textSize="18sp"
         	android:typeface="monospace"
         	android:paddingLeft="10dp"
            />
       <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/velsma"
            android:layout_gravity="right"/>
    </LinearLayout>
    <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:padding="10dp" 
        >
        <TextView 
            android:id="@+id/goe"
            android:text="Πληροφορικής "
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
         	android:textStyle="bold"
         	android:textSize="18sp"
         	android:typeface="monospace"
         	android:paddingLeft="10dp"
            />
