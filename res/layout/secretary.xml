         	android:textSize="18sp"
         	android:typeface="monospace"
         	android:paddingLeft="10dp"
            />
        <ImageView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/velsma"
            android:layout_gravity="right"/>
    </LinearLayout>
